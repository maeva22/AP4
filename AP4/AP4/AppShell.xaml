<Shell xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:views="clr-namespace:AP4.Vues.PageAccueilEnchereEnCoursVue" 
    xmlns:viewsall="clr-namespace:AP4.Vues" 
    xmlns:controls="clr-namespace:AP4.Controls"
    x:Class="AP4.AppShell"
    x:Name="shell">
    <Shell.Resources>
        <Style x:Key="BaseStyle"
            TargetType="Element">
            <Setter Property="Shell.BackgroundColor"
                Value="#a8d5ff" />
            <Setter Property="Shell.ForegroundColor"
                Value="white" />
            <Setter Property="Shell.TitleColor"
                Value="White" />
            <Setter Property="Shell.DisabledColor"
                Value="#B4FFFFFF" />
            <Setter Property="Shell.UnselectedColor"
                Value="#95FFFFFF" />
        </Style>
        <Style TargetType="ShellItem"
            BasedOn="{StaticResource BaseStyle}"/>
        <Style x:Key="enchereEnCours"
               TargetType="Element"
               BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Shell.BackgroundColor"
                    Value="#a8d5ff" />
        </Style>
    </Shell.Resources>

    <Shell.FlyoutHeader>
        <controls:FlyoutHeader />
    </Shell.FlyoutHeader>
    <Shell.FlyoutFooter>
        <controls:FlyoutFooter />
    </Shell.FlyoutFooter>

    <FlyoutItem Route="enchereEnCours"
                FlyoutDisplayOptions="AsSingleItem"
                Title="Enchère en cours"
                Icon="EnchereEnCours.png">
        <ShellContent Route="EnchereClassiques"
            Title="Classiques"
            Style="{StaticResource enchereEnCours}"
            Icon="classique.png"
            ContentTemplate="{DataTemplate views:PageAccueilEnchereEnCoursClassiquesVue}"/>
        <ShellContent Route="EnchereInversees"
            Title="Inversées"
            Style="{StaticResource enchereEnCours}"
            Icon="inversees.png"
            ContentTemplate="{DataTemplate views:PageAccueilEnchereEnCoursInverseesVue}"/>
        <ShellContent Route="EnchereFlashs"
            Title="Flashs"
            Style="{StaticResource enchereEnCours}"
            Icon="flashs.png"
            ContentTemplate="{DataTemplate views:PageAccueilEnchereEnCoursFlashsVue}"/>
    </FlyoutItem>
    <ShellContent Route="Enchere"
            Title="Toutes les Encheres"
            Style="{StaticResource enchereEnCours}"
            Icon="encheres.png"
            ContentTemplate="{DataTemplate viewsall:PageAccueilEnchereVue}"/> 
    <ShellContent Route="Maps"
            Title="Maps"
            Style="{StaticResource enchereEnCours}"
            Icon="emplacement.png"
            ContentTemplate="{DataTemplate viewsall:PageMapsEnchereVue}"/>
    <ShellContent Route="Compte"
            Title="Compte"
            Style="{StaticResource enchereEnCours}"
            Icon="utilisateur.png"
            ContentTemplate="{DataTemplate viewsall:PageInformationUserVue}"/>
    <ShellContent Route="Deconnexion"
            Title="Déconnexion"
            Style="{StaticResource enchereEnCours}"
            Icon="seDeconnecter.png"
            ContentTemplate="{DataTemplate viewsall:PageIndexVue}"/>
</Shell>